    "env-cmd": "^10.1.0",
    "graphql-cli": "^3.0.14",
    "graphql-yoga": "^1.18.3",
    "prisma-binding": "^2.3.16"
  },
  "devDependencies": {
    "nodemon": "^2.0.3"
  }
}
